{
    "name": "prov",
    "displayName": "prov",
    "description": "Support for prov data files.",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.82.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "publisher": "generik",
    "repository": {
        "type": "git",
        "url": "https://github.com/generikvault/prov"
    },
    "icon": "icon.png",
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "prov",
                "aliases": [
                    "prov"
                ],
                "extensions": [
                    "prov"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "prov",
                "scopeName": "source.prov",
                "path": "./syntaxes/prov.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "prov.selectColumn",
                "title": "Select a column of the current prov block"
            },
            {
                "command": "prov.moveColumnLeft",
                "title": "Move a column of the current prov block to the left"
            },
            {
                "command": "prov.moveColumnRight",
                "title": "Move a column of the current prov block to the the right"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "prov.selectColumn",
                    "when": "editorLangId == prov"
                },
                {
                    "command": "prov.moveColumnLeft",
                    "when": "editorLangId == prov"
                },
                {
                    "command": "prov.moveColumnRight",
                    "when": "editorLangId == prov"
                }
            ]
        },
        "keybindings": [
            {
                "command": "prov.selectColumn",
                "key": "ctrl+shift+a",
                "when": "editorLangId == prov && editorTextFocus"
            },
            {
                "command": "prov.moveColumnLeft",
                "key": "ctrl+alt+shift+left",
                "when": "editorLangId == prov && editorTextFocus"
            },
            {
                "command": "prov.moveColumnRight",
                "key": "ctrl+alt+shift+right",
                "when": "editorLangId == prov && editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^8.2.0",
        "glob": "^7.1.6",
        "mocha": "^9.1.3",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}
