{
    "name": "bssv",
    "displayName": "bssv",
    "description": "Support for bssv data files.",
    "version": "1.1.2",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "publisher": "generik",
    "repository": {
        "type": "git",
        "url": "https://github.com/generikvault/bssv"
    },
    "icon": "icon.png",
    "activationEvents": [
        "onLanguage:bssv"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "bssv",
                "aliases": [
                    "bssv"
                ],
                "extensions": [
                    "bssv"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bssv",
                "scopeName": "source.bssv",
                "path": "./syntaxes/bssv.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "bssv.selectColumn",
                "title": "Select a column of the current bssv block"
            },
            {
                "command": "bssv.moveColumnLeft",
                "title": "Move a column of the current bssv block to the left"
            },
            {
                "command": "bssv.moveColumnRight",
                "title": "Move a column of the current bssv block to the the right"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "bssv.selectColumn",
                    "when": "editorLangId == bssv"
                },
                {
                    "command": "bssv.moveColumnLeft",
                    "when": "editorLangId == bssv"
                },
                {
                    "command": "bssv.moveColumnRight",
                    "when": "editorLangId == bssv"
                }
            ]
        },
		"keybindings": [
			{
				"command": "bssv.selectColumn",
				"key": "ctrl+shift+a",
				"when": "editorLangId == bssv && editorTextFocus"
            },
			{
				"command": "bssv.moveColumnLeft",
				"key": "ctrl+alt+shift+left",
				"when": "editorLangId == bssv && editorTextFocus"
            },
			{
				"command": "bssv.moveColumnRight",
				"key": "ctrl+alt+shift+right",
				"when": "editorLangId == bssv && editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.18.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}